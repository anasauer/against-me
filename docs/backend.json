{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "avatar": {
          "type": "string",
          "description": "URL of the user's avatar image."
        },
        "points": {
          "type": "number",
          "description": "Total points accumulated by the user."
        },
        "dailyStreak": {
          "type": "number",
          "description": "Current daily challenge completion streak."
        },
        "weeklyStreak": {
          "type": "number",
          "description": "Current weekly challenge completion streak."
        },
        "friends": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of friend user IDs."
        }
      },
      "required": [
        "name",
        "email"
      ]
    },
    "challenge": {
      "title": "Challenge",
      "description": "A challenge for a user to complete.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the challenge."
        },
        "description": {
          "type": "string",
          "description": "A description of the challenge."
        },
        "points": {
          "type": "number",
          "description": "Points awarded for completing the challenge."
        },
        "type": {
          "type": "string",
          "enum": [
            "daily",
            "weekly",
            "special"
          ]
        },
        "isCompleted": {
          "type": "boolean"
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user this challenge belongs to."
        }
      },
      "required": [
        "title",
        "points",
        "type",
        "isCompleted",
        "userId"
      ]
    },
    "friendRequest": {
      "title": "Friend Request",
      "description": "Represents a friend request between two users.",
      "type": "object",
      "properties": {
        "senderId": {
          "type": "string",
          "description": "The UID of the user sending the request."
        },
        "senderName": {
          "type": "string",
          "description": "The name of the user sending the request."
        },
        "senderAvatar": {
          "type": "string",
          "description": "The avatar of the user sending the request."
        },
        "receiverId": {
          "type": "string",
          "description": "The UID of the user receiving the request."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "accepted",
            "declined"
          ],
          "description": "The current status of the friend request."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the request was created."
        }
      },
      "required": [
        "senderId",
        "receiverId",
        "status",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "email",
      "google"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/challenges/{challengeId}": {
      "schema": {
        "$ref": "#/entities/challenge"
      },
      "description": "Stores the challenges for a specific user."
    },
    "/friendRequests/{requestId}": {
      "schema": {
        "$ref": "#/entities/friendRequest"
      },
      "description": "Stores all friend requests within the application."
    }
  }
}
